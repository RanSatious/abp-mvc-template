@using MyCompany.MyProject.Authorization
@{
    ViewBag.ActiveMenu = PageNames.Administration.Dictionary; //The menu item will be active for this page.
    ViewBag.JsPath = "app/admin/dictionary";
}

<div class="layui-inline">
    <div class="layui-show-lg-inline">
        @if (IsGranted(PermissionNames.Pages_Administration_Dictionary))
        {
        <button class="layui-btn layui-btn-normal" id="btn-addDictionary">添加</button>
        }
        @if (IsGranted(PermissionNames.Pages_Administration_Dictionary))
        {
        <button class="layui-btn layui-btn-danger" id="btn-deleteDictionary">删除</button>
        }
        @if (IsGranted(PermissionNames.Pages_Administration_Dictionary))
        {
        <button class="layui-btn layui-btn-normal" id="btn-dictionaryType">类型管理</button>
        }
    </div>
</div>
<div class="layui-layout-right">
    <form class="layui-form">
        <div class="layui-inline">选择类型：</div>
        <div class="layui-inline">
            <select class="layui-select" lay-filter="selectTypeChange" id="select-type"></select>
        </div>
    </form>
</div>
<table id="main-table" lay-filter="dictionary"></table>
<script type="text/html" id="actionTpl">
    <button class="layui-btn layui-btn-normal layui-btn-xs" lay-event="edit">编辑</button>
    <button class="layui-btn layui-btn-danger layui-btn-xs" lay-event="delete">删除</button>
</script>

